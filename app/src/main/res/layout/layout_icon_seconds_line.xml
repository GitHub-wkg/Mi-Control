<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/black">
    <LinearLayout
        android:id="@+id/icons_second_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/layout_icon_auto_rotate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_auto_rotate"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/item_background"
                    android:padding="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_rotation_lock" />

                <TextView
                    android:id="@+id/txt_auto_rotate"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@string/auto_rotate"
                    android:textColor="@color/color_1AD1FF"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_night_light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_night_light"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/item_background"
                    android:padding="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_night_light" />

                <TextView
                    android:id="@+id/txt_night_light"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@string/night_light"
                    android:textColor="@color/color_1AD1FF"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_dark_theme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_dark_theme"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/item_background"
                    android:padding="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_dark_theme" />

                <TextView
                    android:id="@+id/txt_dark_theme"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@string/dark_theme"
                    android:textColor="@color/color_1AD1FF"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_hotspot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_hotspot"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/item_background"
                    android:padding="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_hotspot" />

                <TextView
                    android:id="@+id/txt_hotspot"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@string/hotspot"
                    android:textColor="@color/color_1AD1FF"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>