<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_title_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rate"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/_15sdp"
        android:paddingTop="@dimen/_30sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingBottom="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:fontFamily="@font/font_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enjoying_app"
            android:textColor="@color/color_101010"
            android:textSize="@dimen/_15sdp"
            />

        <com.ezstudio.controlcenter.customview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/how_feel"
            android:textColor="#0094FF"
            android:textSize="@dimen/_11sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_star_fill" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_star_fill" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_star_fill" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_star_fill" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_star_not_fill" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/layout_title_rate"
        app:layout_constraintStart_toStartOf="@+id/layout_title_rate"
        app:layout_constraintTop_toTopOf="@+id/layout_title_rate"
        app:srcCompat="@drawable/ic_rate" />
</androidx.constraintlayout.widget.ConstraintLayout>